# Define quiz questions, choices, and correct answers
questions = [
    "What is 2 + 2?",
    "Which planet is known as the Red Planet?",
    "What is the capital of France?"
]

choices = [
    ["3", "4", "5"],
    ["Earth", "Mars", "Venus"],
    ["Paris", "London", "Berlin"]
]

correct_answers = [1, 2, 1]  # Index of the correct answer for each question

# Initialize the score
score = 0

# Quiz loop
for i in range(len(questions)):
    print(f"Question {i + 1}: {questions[i]}")
    for j, choice in enumerate(choices[i], start=1):
        print(f"{j}. {choice}")

    user_answer = input("Enter the number of your answer: ")
    if user_answer.isdigit() and 1 <= int(user_answer) <= len(choices[i]):
        user_choice = int(user_answer)
        if user_choice == correct_answers[i]:
            print("Correct!\n")
            score += 1
        else:
            print(f"Sorry, the correct answer is {correct_answers[i]}.\n")
    else:
        print("Invalid input. Please enter the number of your answer.\n")

# Display the final score
print(f"You got {score}/{len(questions)} questions correct.")
