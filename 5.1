# Define quiz questions, choices, and correct answers using tuples
quiz_data = (
    (
        "What is 2 + 2?",
        ("3", "4", "5"),
        "4"
    ),
    (
        "Which planet is known as the Red Planet?",
        ("Earth", "Mars", "Venus"),
        "Mars"
    ),
    (
        "What is the capital of France?",
        ("Paris", "London", "Berlin"),
        "Paris"
    )
)

# Initialize the score
score = 0

# Quiz loop
for i, question_data in enumerate(quiz_data, start=1):
    question, choices, correct_answer = question_data
    print(f"Question {i}: {question}")
    
    for j, choice in enumerate(choices, start=1):
        print(f"{j}. {choice}")

    user_answer = input("Your answer: ")
    
    if user_answer == correct_answer:
        print("Correct!\n")
        score += 1
    else:
        print(f"Sorry, the correct answer is {correct_answer}.\n")

# Display the final score
print(f"You got {score}/{len(quiz_data)} questions correct.")
