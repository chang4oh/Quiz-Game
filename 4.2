# Define quiz questions and choices using tuples
quiz_data = (
    (
        "What is 2 + 2?",
        ("3", "4", "5"),
        "4"
    ),
    (
        "Which planet is known as the Red Planet?",
        ("Earth", "Mars", "Venus"),
        "Mars"
    ),
    (
        "What is the capital of France?",
        ("Paris", "London", "Berlin"),
        "Paris"
    )
)

# Initialize the score and a list to store the user's answers
score = 0
user_answers = []

# Quiz loop
for i, question_data in enumerate(quiz_data, start=1):
    question, choices, correct_answer = question_data
    print(f"Question {i}: {question}")
    
    for j, choice in enumerate(choices, start=1):
        print(f"{j}. {choice}")

    user_answer = input("Your answer: ")
    user_answers.append((question, user_answer, correct_answer))

# Display the final score
for question, user_answer, correct_answer in user_answers:
    if user_answer == correct_answer:
        score += 1

print(f"You got {score}/{len(quiz_data)} questions correct.\n")

# Display all questions and answers, including correct answers
print("Questions and Your Answers:")
for i, (question, user_answer, _) in enumerate(user_answers, start=1):
    print(f"Question {i}: {question}")
    print(f"Your Answer: {user_answer}\n")

# Display correct answers at the end
print("Correct Answers:")
for i, (_, _, correct_answer) in enumerate(user_answers, start=1):
    print(f"Question {i}: {correct_answer}")
